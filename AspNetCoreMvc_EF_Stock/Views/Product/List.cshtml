@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Product>

<h3>Product List</h3>

@if (Model.Count() > 0){
<div class="row">
    @foreach (var urun in Model)
    {

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header text-center">
                    <h5 class="card-title">@urun.Name</h5>
                </div>
                <img src="@urun.ImageUrl" class="card-img-top" alt="@urun.Name" title="@urun.Name">
                <div class="card-body text-center">
                    <p class="card-text">Fiyat : @string.Format("{0:C2}", @urun.Price)</p>
                </div>
                <div class="card-footer text-right">
                    <a href="/Product/Details/@urun.Id" class="btn btn-primary">Ürün Detay...</a>
                </div>
            </div>
        </div>
    }
</div>
}
else{
<div class="alert alert-danger" role="alert">
    <strong>Ürün yok!</strong>İstenilen kategoride ürün bulunmamaktadır.
</div>
}


@section KategoriMenu{
    @await Component.InvokeAsync("Categories")
}